{
  "compilerOptions": {
    "jsx": "react-jsx",
    "incremental": true,
    "diagnostics": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "ES2015", "ScriptHost", "ES2019.Array"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "types": ["node", "react"],
    "removeComments": true,
    "noEmit": false,
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "listEmittedFiles": true,
    "listFiles": true,
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@/constants/*": ["src/constants/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/mobx/*": ["src/mobx/*"],
      "@/theme/*": ["src/theme/*"],
      "@/pages/*": ["src/pages/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hoc/*": ["src/hoc/*"],
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/locales/*": ["src/locales/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/assets/*": ["src/assets/*"],
      "@/styles/*": ["src/styles/*"]
    }
  },
  "include": ["src/**/*", "typings.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    ".vscode",
    "public",
    "webpack"
  ]
}
